<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SpendXP">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/char_name_xp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/teuton_mager_bold"
                android:gravity="center|left"
                android:text="TAP ATTRIBUTES\nOR SKILLS TO"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/starjedi_special_edition"
                android:gravity="center|left"
                android:text="spend xp"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <ImageButton
                android:id="@+id/save_button"
                android:layout_width="96dp"
                android:layout_height="64dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/icon_save" />
        </RelativeLayout>


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


    </android.support.design.widget.AppBarLayout>


    <include layout="@layout/content_species_selection" />



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="95dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="180dp">

                        <ImageButton
                            android:id="@+id/undo_btn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_margin="12dp"
                            android:background="@drawable/undo" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/black_circle" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/xp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/teuton_mager"
                                android:gravity="center_horizontal"
                                android:text="10"
                                android:textColor="@color/black"
                                android:textSize="44sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/EXPERIENCE_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/teuton_mager"
                                android:gravity="center_horizontal"
                                android:text="EXPERIENCE"
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/wss_icons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/strain_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/icon2_strain" />

                            <TextView
                                android:id="@+id/strain_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="52dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="10"
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/wound_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/icon2_wound" />

                            <TextView
                                android:id="@+id/wound_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="52dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="10"
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/soak_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/icon2_soak" />

                            <TextView
                                android:id="@+id/soak_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="52dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="3"
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>



                <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="320dp"
                    android:layout_weight="1"
                    android:stretchColumns="0,1">

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_marginTop="5dp">

                        <RelativeLayout
                            android:layout_height="85dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/br_view"
                                android:layout_width="wrap_content"
                                android:layout_height="85dp"
                                android:gravity="center"
                                android:src="@drawable/attrribute" />

                            <TextView
                                android:id="@+id/brawn_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="67dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="BRAWN"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_height="85dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ag_view"
                                android:layout_width="wrap_content"
                                android:layout_height="85dp"
                                android:gravity="center"
                                android:src="@drawable/attrribute" />

                            <TextView
                                android:id="@+id/agility_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="67dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="AGILITY"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </TableRow>

                    <TableRow android:layout_width="0dp">

                        <RelativeLayout
                            android:layout_height="85dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/int_view"
                                android:layout_width="wrap_content"
                                android:layout_height="85dp"
                                android:gravity="center"
                                android:src="@drawable/attrribute" />

                            <TextView
                                android:id="@+id/intellect_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="67dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="INTELLECT"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_height="85dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/cun_view"
                                android:layout_width="wrap_content"
                                android:layout_height="85dp"
                                android:gravity="center"
                                android:src="@drawable/attrribute" />

                            <TextView
                                android:id="@+id/cunning_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="67dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="CUNNING"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </TableRow>

                    <TableRow android:layout_width="0dp">

                        <RelativeLayout
                            android:layout_height="85dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/will_view"
                                android:layout_width="wrap_content"
                                android:layout_height="85dp"
                                android:gravity="center"
                                android:src="@drawable/attrribute" />

                            <TextView
                                android:id="@+id/willpower_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="67dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="WILLPOWER"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_height="85dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/pr_view"
                                android:layout_width="wrap_content"
                                android:layout_height="85dp"
                                android:gravity="center"
                                android:src="@drawable/attrribute" />

                            <TextView
                                android:id="@+id/presence_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="67dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="PRESENCE"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>



            <TextView
                android:id="@+id/skills_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/swBlue"
                android:fontFamily="@font/starjedi_special_edition"
                android:paddingLeft="12dp"
                android:text="skills"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/skills_list"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <Button
            android:id="@+id/skills_info_btn"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginTop="270dp"
            android:layout_marginRight="@dimen/fab_margin"
            android:background="@drawable/info_icon"
            android:scaleType="centerCrop"
            android:src="@drawable/info_icon"
            />


