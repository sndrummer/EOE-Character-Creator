<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CharacterSummary">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:theme="@style/AppTheme.AppBarOverlay">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


    </android.support.design.widget.AppBarLayout>


    <include layout="@layout/content_species_selection" />

    <TextView
        android:id="@+id/char_name_summary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/starjedi_special_edition"
        android:gravity="center"
        android:text="han solo"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/char_species_class"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/starjedi_special_edition"
        android:gravity="center"
        android:text="human smuggler"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="95dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/char_summary_img"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/human" />

                <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="320dp"
                    android:layout_weight="1"
                    android:stretchColumns="0,1">

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_marginTop="5dp">

                        <RelativeLayout
                            android:layout_height="85dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="85dp"
                                android:gravity="center"
                                android:src="@drawable/attrribute" />

                            <TextView
                                android:id="@+id/brawn_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="22dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="67dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="BRAWN"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_height="85dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="85dp"
                                android:gravity="center"
                                android:src="@drawable/attrribute" />

                            <TextView
                                android:id="@+id/agility_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="22dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="67dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="AGILITY"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </TableRow>

                    <TableRow android:layout_width="0dp">

                        <RelativeLayout
                            android:layout_height="85dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="85dp"
                                android:gravity="center"
                                android:src="@drawable/attrribute" />

                            <TextView
                                android:id="@+id/intellect_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="22dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="67dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="INTELLECT"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_height="85dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="85dp"
                                android:gravity="center"
                                android:src="@drawable/attrribute" />

                            <TextView
                                android:id="@+id/cunning_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="22dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="67dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="CUNNING"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </TableRow>

                    <TableRow android:layout_width="0dp">

                        <RelativeLayout
                            android:layout_height="85dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="85dp"
                                android:gravity="center"
                                android:src="@drawable/attrribute" />

                            <TextView
                                android:id="@+id/willpower_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="22dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="67dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="WILLPOWER"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_height="85dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="85dp"
                                android:gravity="center"
                                android:src="@drawable/attrribute" />

                            <TextView
                                android:id="@+id/presence_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="2"
                                android:textColor="@color/black"
                                android:textSize="22dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="67dp"
                                android:fontFamily="@font/teuton_mager"
                                android:text="PRESENCE"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/skills_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/swBlue"
                android:fontFamily="@font/starjedi_special_edition"
                android:paddingLeft="12dp"
                android:text="skills"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </LinearLayout>

        <Button
            android:id="@+id/skills_info_btn"
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginTop="270dp"
            android:layout_marginRight="@dimen/fab_margin"
            android:background="@drawable/info_icon"
            android:scaleType="centerCrop"
            android:src="@drawable/info_icon"


            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100sp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="55dp"
                android:gravity="bottom">

                <Button
                    android:id="@+id/species_next"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/arrow_l"
                    android:scaleType="fitStart" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/arrow_r"
                    android:scaleType="fitStart" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>